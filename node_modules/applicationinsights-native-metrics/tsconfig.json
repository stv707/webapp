{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "outDir": "./out",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "lib/main.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}